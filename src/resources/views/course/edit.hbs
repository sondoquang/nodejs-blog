<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 border rounded px-3 py-2">
            <h1 class="text-primary text-uppercase text-center">Cập nhật khóa học</h1>
            <form method="POST" action="/courses/{{course._id}}?_method=PUT">
                <div class="form-group">
                    <label for="name-course">Tên khóa học</label>
                    <input type="text" name="name" value="{{course.name}}" class="form-control" id="name-course" placeholder="Nhập tên khóa học ...">
                </div>
                <div class="form-group">
                    <label for="desc-course">Mô tả</label>
                    <textarea name="desc" rows="5" class="form-control" id="desc-course" placeholder="Nhập mô tả khóa học ...">{{course.desc}}</textarea>
                </div>
                <div class="form-group">
                    <label for="videoId-course">Video Id</label>
                    <input type="text" name="videoId" value="{{course.videoId}}" class="form-control" id="videoId-course" placeholder="Nhập video id ...">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-warning text-uppercase">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>