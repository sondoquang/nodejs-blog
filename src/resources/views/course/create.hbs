<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 border rounded px-3 py-2">
            <h1 class="text-primary text-uppercase text-center">Tạo mới khóa học</h1>
            <form method="POST" action="/courses/store">
                <div class="form-group">
                    <label for="name-course">Name</label>
                    <input type="text" name="name" class="form-control" id="name-course" placeholder="Nhập tên khóa học ...">
                </div>
                <div class="form-group">
                    <label for="desc-course">Mô tả</label>
                    <input type="text" name="desc" class="form-control" id="desc-course" placeholder="Nhập mô tả khóa học ...">
                </div>
                <div class="form-group">
                    <label for="videoId-course">Video Id</label>
                    <input type="text" name="videoId" class="form-control" id="videoId-course" placeholder="Nhập video id ...">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary text-uppercase">Thêm khóa học</button>
                    <a href="/me/stored/courses" class="btn btn-info text-uppercase">Danh sách khóa học</a>
                </div>
            </form>
        </div>
    </div>
</div>