<div class="my-4 container mx-auto">
    <h1 class="text-center text-uppercase font-bold text-primary">Danh sách khóa học</h1>
    <div class="row">
        {{#each courses }}
            <div class="col-sm-6 col-md-4 mt-3">
                <div class="card" >
                    <div style="max-height: 196px; overflow: hidden;">
                        <a href="courses/{{this.slug}}">
                            <img src="{{this.img}}" class="card-img-top" alt="{{this.name}}">
                        </a>
                    </div>
                    <div class="card-body">
                        <a href="courses/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h5>
                        </a>
                        <p class="card-text custom-text">{{this.desc}}</p>
                        <a href="courses/{{this.slug}}" class="btn btn-primary">Mua khóa học</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>