<div class="mt-4 container">
    <div class="row">
        <div class="col-md-12">
            <h2> Khóa học đã xóa </h2>
            <a href="/me/stored/courses" class="btn btn-link">Danh sách khóa học</a>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên khóa học</th>
                    <th scope="col">Mô tả</th>
                    <th scope="col">Thời gian tạo</th>
                    <th scope="col">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                {{#each courses}}
                    <tr>
                        <th scope="row">{{sum @index 1}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.desc}}</td>
                        <td>{{this.deletedAt}}</td>
                        <td class="d-flex">
                            <form method="POST" action="/me/courses/{{this._id}}/restore?_method=PUT">
                                <button class="btn btn-link">
                                    Khôi phục
                                </button>
                            </form>
                            <a class="btn btn-link" href="" data-toggle="modal" data-target="#delete-course" data-id="{{this._id}}">
                                Xóa vĩnh viễn
                            </a>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td colspan="5" class="text-center">Danh sách trống
                            <a class="btn btn-link" href="/">Đăng kí khóa học</a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Confirm delete course -->
<div class="modal" tabindex="-1" id="delete-course">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cảnh báo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Sau khi xóa sẽ mất thông tin vĩnh viễn, bạn muốn xóa chứ ?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-delete-course" class="btn btn-danger" >Xác nhận</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Hủy bỏ</button>
            </div>
        </div>
    </div>
</div>

<!--Delete hidden form-->
<form method="POST" id="form-delete-course">
</form>
<!-- Dữ liệu truyền từ form lên-->
<script>
    // Khi dialog confirm show
    document.addEventListener('DOMContentLoaded', (e) => {
        let id;
        const btnDelete = document.getElementById("btn-delete-course")
        const formDelete = document.getElementById("form-delete-course")

        $('#delete-course').on('show.bs.modal', function (event) {
            let button = $(event.relatedTarget)
            id = button.data('id')
        })


        btnDelete.onclick = function () {
            formDelete.action = `/me/courses/${id}?_method=DELETE`;
            formDelete.submit()
        }


    })
</script>